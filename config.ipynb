# Librerie
import urllib.request
from PIL import Image
import cv2
import os

# --- CONFIG ---
VIDEO_URL = "https://base44.app/api/apps/68da73a2a7d7da585c5bfa87/files/public/68da73a2a7d7da585c5bfa87/7c8939422_INTRO.mp4"
FAKE_PREVIEW_URL = "https://base44.app/api/apps/68da73a2a7d7da585c5bfa87/files/public/68da73a2a7d7da585c5bfa87/592235c2d_freerbx.jpg"
SAVE_FAKE = True  # True = fake preview, False = estrai dal video
OUTPUT_PATH = "discord_preview.png"

# --- STEP 1: usare fake o generare reale ---
if SAVE_FAKE:
    # Scarica immagine fake
    urllib.request.urlretrieve(FAKE_PREVIEW_URL, OUTPUT_PATH)
    print(f"[OK] Fake preview salvata: {OUTPUT_PATH}")
else:
    # Scarica video
    video_path = "temp_video.mp4"
    if not os.path.exists(video_path):
        urllib.request.urlretrieve(VIDEO_URL, video_path)
        print("[OK] Video scaricato")

    # Estrai frame centrale
    cap = cv2.VideoCapture(video_path)
    frame_count = int(cap.get(cv2.CAP_PROP_FRAME_COUNT))
    cap.set(cv2.CAP_PROP_POS_FRAMES, frame_count // 2)
    ret, frame = cap.read()
    cap.release()
    if not ret:
        raise Exception("Errore nel leggere il video")

    # Salva frame come PNG
    frame_rgb = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)
    img = Image.fromarray(frame_rgb)
    img.save(OUTPUT_PATH)
    print(f"[OK] Anteprima reale generata: {OUTPUT_PATH}")

# --- STEP 2: Mostra l'immagine ---
img = Image.open(OUTPUT_PATH)
img.show()
